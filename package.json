{
  "name": "@schau-recycling/email-handler",
  "description": "Send an e-mail through AWS Lamda",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Dustin Schau <dustinschau@gmail.com> (https://dustinschau.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/DSchau/email-handler.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "del-cli \"dist/**/*\"",
    "build": "tsc",
    "format": "prettier \"src/**/*.{ts,tsx}\" --parser typescript --single-quote --write",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=development serverless offline --location .",
    "test": "jest"
  },
  "dependencies": {
    "@schau-recycling/email-template": "~1.0.0",
    "foundation-emails": "~2.2.1",
    "glamor": "~2.20.40",
    "he": "~1.1.1",
    "inky": "~1.3.7",
    "inline-css": "~2.2.2",
    "nodemailer": "~4.0.1",
    "react": "~16.0.0",
    "react-dom": "~16.0.0"
  },
  "devDependencies": {
    "@types/jest": "~21.1.1",
    "@types/node": "^8.0.28",
    "@types/nodemailer": "^3.1.3",
    "cross-env": "~5.0.0",
    "del-cli": "~1.0.0",
    "husky": "^0.14.3",
    "jest": "~21.2.1",
    "lint-staged": "^4.1.3",
    "prettier": "^1.7.0",
    "serverless-offline": "~3.14.0",
    "serverless-plugin-warmup": "^3.1.0-rc.1",
    "ts-jest": "~21.0.1",
    "typescript": "^2.5.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "git add"
    ]
  }
}
